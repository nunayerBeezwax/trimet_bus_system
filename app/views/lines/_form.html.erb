<%= form_for @line, :html => { :multipart => true } do |form| %>
  <div class='form-group'>
    <%= form.label "Line Name" %>
    <%= form.text_field :name %>
  </div>

  <div class='form-group'>
    <% @stations.each do |station| %>
      <%= check_box_tag("station_ids[]", station.id) %>
      <%= label_tag("#{station.name}") %>
    <% end %>
  </div>

    <%= form.submit(:class => "btn btn-primary") %>

<% end %>





