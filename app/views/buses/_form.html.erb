<%= form_for @bus, :html => { :multipart => true } do |form| %>
  <div class='form-group'>
    <%= form.label "Bus Name" %>
    <%= form.text_field :name %>
  </div>

  <div class='form-group'>
    <%= select("bus", "line_id", Line.all.collect {|p| [ p.name, p.id ] }) %>
  </div>

    <%= form.submit(:class => "btn btn-primary") %>

<% end %>





